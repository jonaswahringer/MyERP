<FlowDocument xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:local="clr-namespace:MyERP.Printing"
              ColumnWidth="400" FontSize="14" FontFamily="Georgia">
    <Paragraph>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="300" />
                <RowDefinition Height="300" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical">

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Rechnung: " FontSize="18" FontWeight="Bold" Margin="0,0,5,0" />
                    <TextBlock Text="{Binding Path=Invoice.Id}" FontSize="18" FontWeight="Medium" Margin="5,0,0,0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Rechnungsdatum: " FontSize="18" FontWeight="Bold" Margin="0,0,5,0" />
                    <TextBlock Text="{Binding Path=PrintingDate}" FontSize="18" FontWeight="Medium" Margin="5,0,0,0" />
                </StackPanel>

                <TextBlock />
                <TextBlock />

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Schulzentrum Ybbs" FontSize="18" />
                    <TextBlock Text="Schulring 6 3370 Ybbs" FontSize="18" />
                </StackPanel>

                <TextBlock />
                <TextBlock />
                <TextBlock />
                <TextBlock />

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Kopie" FontSize="16" FontWeight="Bold" />
                    <TextBlock Text="Rechnungsbetrag: " FontSize="16" FontWeight="Normal" Margin="0,0,0,20" HorizontalAlignment="Right" />
                    <TextBlock Text="{Binding Path=Invoice.Vat}" FontSize="16" FontWeight="ExtraBold" HorizontalAlignment="Right" />
                </StackPanel>

            </StackPanel>

            <ListView Grid.Row="1" ItemsSource="{Binding Path=Positions}" HorizontalAlignment="Center">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ItemNr" Width="150" DisplayMemberBinding="{Binding Path=ItemNr}" />
                        <GridViewColumn Header="Price" Width="150" DisplayMemberBinding="{Binding Path=Price}" />
                        <GridViewColumn Header="Qty" Width="150" DisplayMemberBinding="{Binding Path=Qty}" />
                    </GridView>
                </ListView.View>
            </ListView>
            
        </Grid>
    </Paragraph>
</FlowDocument>
