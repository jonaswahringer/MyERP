<Window x:Class="MyERP.View.View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyERP.View"
        xmlns:src="clr-namespace:MyERP.ViewModel"
        mc:Ignorable="d"
        Title="View" Height="450" Width="800">
    
    <Window.DataContext>
        <src:InvoiceViewModel />
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>


        <TextBox Text="needs binding"></TextBox>
        <TextBox Text="needs binding"></TextBox>
        <Button Content="Press me" Command="{Binding AddCommand}"/>

        <ListView HorizontalAlignment="Stretch"
                  ItemsSource="{Binding Path=InvoiceCTX.invoices}"
                  Grid.Row="1" Grid.Column="0" FontWeight="Normal">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id"
							DisplayMemberBinding="{Binding Path=Id}"
							Width="80" />
                    <GridViewColumn Header="CustomerName"
							DisplayMemberBinding="{Binding Path=CustomerName}"
							Width="80" />
                    <GridViewColumn Header="CustomerAddress"
							DisplayMemberBinding="{Binding Path=CustomerAddress}"
							Width="80" />
                    <GridViewColumn Header="Amount"
							DisplayMemberBinding="{Binding Path=Amount}"
							Width="80" />
                    <GridViewColumn Header="Date"
							DisplayMemberBinding="{Binding Path=Date}"
							Width="80" />
                    <GridViewColumn Header="Vat"
							DisplayMemberBinding="{Binding Path=Vat}"
							Width="80" />
                </GridView>
            </ListView.View>
            
        </ListView>
        
    </Grid>
</Window>
